                    android:gravity="center"
                    android:layout_below="@+id/imageView2"
                    android:background="#96d9cc"
                    android:layout_marginTop="-7dp"
                    android:layout_marginBottom="-2dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="230dp"
