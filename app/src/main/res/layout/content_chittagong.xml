<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@mipmap/jhorna1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"

            android:text="Chittagong is an important zone for South Asia because it has a major seaport which is situated in convenient geographic location. Chittagong is the second largest city of Bangladesh and contains most of the natural wonders of the country. It is situated between hill tracts and the sea bay of Bengal and in the bank of the river Karnaphuli.The most popular natural wonders of Chittagong are coxâ€™s bazaar, Saint Martin Island, Bandarban, Naval Beach and Rangamati. There are more places that you may not want to miss the chance to visit whenever you get. Those are Bhatiary hill, Meghla, Sitakunda Eco park, dula hajara safari park, foys lake, himchori, inani."
            android:id="@+id/textView"
            android:textColor="#faf7fa" />

        <ImageView
            android:layout_marginTop="-40dp"
            android:layout_marginBottom="-50dp"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:id="@+id/imageView"
            android:src="@mipmap/saint12"/>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Chill Wtih Chittagong"
            android:textSize="20dp"
            android:layout_marginLeft="80dp"
            android:textColor="@android:color/holo_red_light"
            android:id="@+id/textView2"
            android:layout_marginBottom="-40dp" />
        <Button
            android:layout_marginTop="50dp"
            android:layout_marginBottom="-50dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Region"
            android:drawableLeft="@mipmap/region"
            android:drawablePadding="-50dp"
            android:id="@+id/button0" />
        <Button

            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Sightseeing"
            android:drawableLeft="@mipmap/cam"
            android:drawablePadding="-50dp"
            android:id="@+id/button9" />

        <Button

            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Activities"
            android:drawableLeft="@mipmap/acti"
            android:drawablePadding="-50dp"
            android:id="@+id/button" />



        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Weather Update"
            android:onClick="toWeatherActivity"
            android:drawableLeft="@mipmap/day"
            android:drawablePadding="-50dp"
            android:id="@+id/button2" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="City walks"
            android:drawableLeft="@mipmap/walkicon"
            android:drawablePadding="-50dp"
            android:id="@+id/button3" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Festivals"
            android:drawableLeft="@mipmap/festive"
            android:drawablePadding="-50dp"
            android:id="@+id/button4" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Sports"
            android:drawableLeft="@mipmap/game"
            android:drawablePadding="-50dp"
            android:id="@+id/button5" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Safety"
            android:drawableLeft="@mipmap/police"
            android:drawablePadding="-50dp"
            android:id="@+id/button6" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Health"
            android:drawableLeft="@mipmap/health"
            android:drawablePadding="-50dp"
            android:id="@+id/button7" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Money"
            android:drawableLeft="@mipmap/money"
            android:drawablePadding="-50dp"
            android:id="@+id/button8" />




    </LinearLayout>
</ScrollView>
