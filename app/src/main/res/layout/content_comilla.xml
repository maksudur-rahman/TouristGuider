<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@mipmap/c4">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"

            android:text="Comilla is a small division in Bangladesh. Comilla located in south-eastern Bangladesh, along with tha Dhaka-Chittagong highway.Comilla is a most renowned tourist area in Bangladesh. Here have many places to visit for enchantment. Tourist areas in Comilla are War Cemetery, Lalmai hills, Maynamoti hills, Salban Vihara, (Bangladesh Academy for Rural Development)BARD, Dharmashagar, Maynamoti Museum, Comilla Zoo and Shah Shuja Masque."
            android:id="@+id/textView"
            android:textColor="#faf7fa" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="-70dp"
            android:layout_marginBottom="-50dp"
            android:id="@+id/imageView"
            android:src="@mipmap/c1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Chill Wtih Comilla"
            android:textSize="20dp"
            android:textColor="@android:color/holo_red_light"
            android:id="@+id/textView2"
            android:layout_marginBottom="-40dp"
            android:layout_marginTop="-40dp"

            android:layout_marginLeft="80dp"/>
        <Button
            android:layout_marginTop="50dp"
            android:layout_marginBottom="-50dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Region"
            android:drawableLeft="@mipmap/region"
            android:drawablePadding="-50dp"
            android:id="@+id/button0" />
        <Button
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Sightseeing"
            android:drawableLeft="@mipmap/cam"
            android:drawablePadding="-50dp"
            android:id="@+id/button9" />

        <Button

            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Activities"
            android:drawableLeft="@mipmap/acti"
            android:drawablePadding="-50dp"
            android:id="@+id/button" />



        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Weather Update"
            android:onClick="toWeatherActivity"
            android:drawableLeft="@mipmap/day"
            android:drawablePadding="-50dp"
            android:id="@+id/button2" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="City walks"
            android:drawableLeft="@mipmap/walkicon"
            android:drawablePadding="-50dp"
            android:id="@+id/button3" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Festivals"
            android:drawableLeft="@mipmap/festive"
            android:drawablePadding="-50dp"
            android:id="@+id/button4" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Sports"
            android:drawableLeft="@mipmap/game"
            android:drawablePadding="-50dp"
            android:id="@+id/button5" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Safety"
            android:drawableLeft="@mipmap/police"
            android:drawablePadding="-50dp"
            android:id="@+id/button6" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Health"
            android:drawableLeft="@mipmap/health"
            android:drawablePadding="-50dp"
            android:id="@+id/button7" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Money"
            android:drawableLeft="@mipmap/money"
            android:drawablePadding="-50dp"
            android:id="@+id/button8" />




    </LinearLayout>
</ScrollView>
