<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@mipmap/r7">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"

            android:text="
Sylhet is a major city in north-eastern Bangladesh. It is located on the bank of river Surma and the district consists of 12 Upazilas and 5 Pourashavas and 105 unions with the city as Municipality . Sylhet is one of the oldest city in Bangladesh having a vast historical and cultural background and diversified inhabitants of Garo , Khasia, Monipuri and,Hazong. The district is surrounded by the Jaintia, Khasi and Tripura hills. The city is has a population of 500,000 people having a high population density. It is one of the largest cities in Bangladesh. Sylhet region is well known for its tea gardens and tropical forests."
            android:id="@+id/textView"
            android:textColor="#faf7fa" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="-70dp"
            android:layout_marginBottom="-50dp"
            android:id="@+id/imageView"
            android:src="@mipmap/jj1"/>
        e
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Chill Wtih Sylhet"
            android:textSize="20dp"
            android:textColor="@android:color/holo_red_light"
            android:id="@+id/textView2"
            android:layout_marginBottom="-40dp"
            android:layout_marginTop="-40dp"

            android:layout_marginLeft="80dp"/>
        <Button
            android:layout_marginTop="50dp"
            android:layout_marginBottom="-50dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Region"
            android:drawableLeft="@mipmap/region"
            android:drawablePadding="-50dp"
            android:id="@+id/button0" />
        <Button
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Sightseeing"
            android:drawableLeft="@mipmap/cam"
            android:drawablePadding="-50dp"
            android:id="@+id/button9" />

        <Button

            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Activities"
            android:drawableLeft="@mipmap/acti"
            android:drawablePadding="-50dp"
            android:id="@+id/button" />



        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Weather Update"
            android:onClick="toWeatherActivity"
            android:drawableLeft="@mipmap/day"
            android:drawablePadding="-50dp"
            android:id="@+id/button2" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="City walks"
            android:drawableLeft="@mipmap/walkicon"
            android:drawablePadding="-50dp"
            android:id="@+id/button3" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Festivals"
            android:drawableLeft="@mipmap/festive"
            android:drawablePadding="-50dp"
            android:id="@+id/button4" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Sports"
            android:drawableLeft="@mipmap/game"
            android:drawablePadding="-50dp"
            android:id="@+id/button5" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Safety"
            android:drawableLeft="@mipmap/police"
            android:drawablePadding="-50dp"
            android:id="@+id/button6" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Health"
            android:drawableLeft="@mipmap/health"
            android:drawablePadding="-50dp"
            android:id="@+id/button7" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Money"
            android:drawableLeft="@mipmap/money"
            android:drawablePadding="-50dp"
            android:id="@+id/button8" />




    </LinearLayout>
</ScrollView>
